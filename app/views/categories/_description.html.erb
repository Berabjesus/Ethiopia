<div class="col-12 col-sm-6 px-0 border article-content-height">
  <div class=" h-100 w-100 px-1 d-flex flex-column">
    <div class="mt-2 d-flex ">
      <h2 class="pb-2 h4  d-inline-block theme-color-text underline"><%= category.name %></h2>
    </div>
    <div class="d-flex align-items-start">
      <h2 class="text-dark font-weight-bolder h3"><%= article.title%></h2>
    </div>
    <div class="overflow-hidden text-wrap d-flex flex-column text-break article-container">
      <p class="h5 text-break"><%= article.text%></p>
    </div>
    <div class=" d-flex flex-column w-100 mt-auto pb-2">
      <div class="align-self-start pb-4">
        <%= link_to 'Read More', session_path(current_user.id),method: :delete, class: 'h5 theme-color-text'%>
      </div>
      <div class="d-flex justify-content-between">
        <span>
          <%= vote_button article%>
        </span>
        <span class=" ml-2">
          <p class="h6">Has <%= pluralize(article.vote_count, 'vote')%></p>
        </span>
      </div>
    </div>
  </div>
</div>