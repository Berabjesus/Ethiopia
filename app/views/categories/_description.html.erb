<div class="col-12 col-sm-6 px-0 border article-content-height">
  <div class=" h-100 w-100 px-1 d-flex flex-column">
    <div class="mt-2 d-flex ">
      <h2 class="pb-2 h4 d-inline-block font-weight-bolder theme-color-text underline"><%= category.name %></h2>
    </div>
    <div class="d-flex align-items-start">
      <h2 class="text-dark font-weight-bold h4 text-wrap text-break"><%= article.title%></h2>
    </div>
    <div class="overflow-hidden text-wrap d-flex flex-column pt-3 text-break article-container">
      <p class="h6 text-break"><%= article.text%></p>
    </div>
    <div class=" d-flex flex-column w-100 mt-auto pb-2">
      <div class="align-self-start pb-4">
        <%= link_to 'Read More', session_path(current_user.id),method: :delete, class: 'h5 theme-color-text'%>
      </div>
      <div class="d-flex">
        <span class="mr-3">
          <%= vote_button article%>
        </span>
        <p class="h6 align-self-end">Has <%= pluralize(article.vote_count, 'vote')%></p>
      </div>
    </div>
  </div>
</div>