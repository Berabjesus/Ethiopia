<div class="col-12 col-sm-6 d-flex justify-content-around flex-column text-break">
  <div class="mt-2 d-flex ">
    <h2 class="pb-2 h4  d-inline-block theme-color-text underline"><%= category.name %></h2>
  </div>
  <div class="d-flex align-items-start">
    <h2 class="text-dark font-weight-bolder h3"><%= article.title%></h2>
  </div>
  <div class="overflow-hidden text-wrap d-flex flex-column text-break article-container">
    <p class="h5 text-break"><%= article.text%></p>
  </div>
  <div class="align-self-start d-flex justify-content-between w-100">
    <span class="align-self-center">
      <%= button_tag 'Read More', class: 'btn btn-light border'%>
    </span>
    <span class="align-self-center">
      <%= vote_button article%>
    </span>
    <span class="align-self-end ml-2">
      <p class="h6">Has <%= pluralize(article.vote_count, 'vote')%></p>
    </span>
  </div>
</div>