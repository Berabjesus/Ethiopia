<div class="alert bg-light shadow-lg col-10 col-md-7 col-lg-6 col-xl-4 side__bar">
<button type="button" class="close" data-dismiss="alert">&times;</button>

  <div>
    <h1 class="my-4 text-center">Sign Up</h1>
    <%= form_with url: users_path, html: {class: 'form-horizontal'} do |f|%>
      <div class="form-group">
        <%= f.label "User name: "%>
        <%= f.text_field :name, placeholder: 'Your name here', class: 'form-control'%>  
      </div>
      <div class="form-group">
        <%= f.label "Password: "%>
        <%= f.password_field :password, placeholder: 'Your password here', class: 'form-control'%>  
      </div>
      <div class="form-group">
        <%= f.label "Confirm Password: "%>
        <%= f.password_field :password_confirmation, placeholder: 'Retype Your password here', class: 'form-control'%>  
      </div>
      <div class="form-group w-100 text-center">
        <%= f.submit "Sign up", class: 'btn btn-info w-25'%>
      </div>
    <%end%>
    <div class="d-flex justify-content-center">
      <p>or</p>
      <%= link_to 'Login', articles_path, class: 'btn-link ml-1 text-decoration-none'%>
    </div>
  </div>

  <div class="border mt-3 py-2 d-flex flex-column align-items-center">
    <div class="d-flex mb-2">
      <i class="fa fa-3x fa-google mr-2 text-primary"></i>
      <%= button_to "Sign up with Google", '/auth/google_oauth2', {class: 'btn btn-primary btn-lg'} %>
    </div>
    <div class="d-flex">
      <i class="fa fa-3x fa-github mr-2"></i>
      <%= button_to "Sign up with Github", '/auth/github', {class: 'btn btn-dark btn-lg'}%>
    </div>
  </div>
</div>